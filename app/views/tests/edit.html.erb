<%= form_for @test do |f| %>
  <%= f.fields_for :user_answers do |builder| %>
    <div class="row question">
      <div class="col-md-4">        
        <h3>
          <%= builder.options[:child_index] + 1 %>.
          <%= builder.object.word.vn_word %>
        </h3>
      </div>
      <div class="col-md-8 container-fluid">
        <% builder.object.word.answers.suffer.each do |answer| %>
          <div class="row">
            <%= builder.radio_button :answer_id, answer.id %>
            <%= answer.jp_word %>
          </div>
          <hr>
        <% end %>
      </div>
      <hr>
    </div>
  <% end %>
  <div class="row">
    <%= hidden_field_tag :category , @test.category.name %>
    <%#= f.submit t(".submit"), class: "col-md-2 btn btn-primary", id: "submit_test" %>
    <%= f.submit "提出する", class: "col-md-2 btn btn-primary", id: "submit_test" %>
  </div>
<% end %>
